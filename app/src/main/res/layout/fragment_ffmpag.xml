            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="merge_video" />

        <Button
            android:id="@+id/scale_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale_video" />

        <Button
            android:id="@+id/video_convert_images"

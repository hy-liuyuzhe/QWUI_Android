            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawText" />
        <Button
            android:id="@+id/add_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_subtitle" />

        <Button
            android:id="@+id/show_streams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show_streams" />

        <Button
            android:id="@+id/flip_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flip_video" />

        <Button

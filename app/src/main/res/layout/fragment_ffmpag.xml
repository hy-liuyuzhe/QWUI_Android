            android:id="@+id/video_watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="video_watermark" />

        <Button
            android:id="@+id/media_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
